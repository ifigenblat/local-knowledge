{
  "name": "local-knowledge",
  "version": "1.0.0",
  "description": "A React and Node.js app that creates cards from uploaded content",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:microservices": "bash start-dev-microservices.sh",
    "server": "cd server && npm run dev",
    "backend": "bash start-backend.sh",
    "backend:check": "curl -s http://localhost:5010/api/health || echo 'Backend not running. Start it: npm run backend'",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start": "cd server && npm start",
    "setup": "./setup.sh",
    "stop": "pkill -f 'npm run dev' && lsof -ti:3000 | xargs kill -9 && lsof -ti:5001 | xargs kill -9",
    "clean": "rm -rf node_modules server/node_modules client/node_modules",
    "docker:start": "docker start mongodb",
    "docker:stop": "docker stop mongodb",
    "docker:restart": "docker restart mongodb",
    "docker:logs": "docker logs mongodb",
    "test:backend": "curl http://localhost:5001/api/health",
    "test:frontend": "curl -I http://localhost:3000",
    "test:proxy": "curl http://localhost:3000/api/health",
    "test:cards": "cd services/card-service && node test-card-endpoints.js",
    "test:collections": "cd services/collection-service && node test-collection-endpoints.js",
    "test:uploads": "cd services/upload-service && node test-upload-endpoints.js",
    "test:content": "cd services/content-processing-service && node test-content-processing-endpoints.js",
    "test:ai": "cd services/ai-service && node test-ai-endpoints.js",
    "test:email": "cd services/email-service && node test-email-endpoints.js",
    "test:preview": "cd services/preview-service && node test-preview-endpoints.js",
    "test:files": "cd services/files-service && node test-files-endpoints.js",
    "test:integration": "cd services && node test-integration-upload-files.js",
    "count:cards": "cd services/card-service && node count-cards.js"
  },
  "keywords": [
    "react",
    "nodejs",
    "cards",
    "content",
    "leadership"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
