	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-set baseUrl if not set",
					"if (!pm.environment.get('baseUrl')) {",
					"    pm.environment.set('baseUrl', 'http://localhost:8000');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Global test to check if token is set for protected routes",
					"if (pm.request.url.toString().includes('/api/users') && !pm.environment.get('token')) {",
					"    console.warn('Warning: No token found. Please run \"Login (Get Token)\" first.');",
					"}"
				]
			}
		}
	],
